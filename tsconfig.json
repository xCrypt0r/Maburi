{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
  },
  "include": [
      "src"
  ],
  "ts-node": {
    "swc": true
  }
}
